# Relay Voice Server Environment Variables

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Server Configuration
PORT=8080
HOST=0.0.0.0

# Development Mode
DEV_MODE=true

# Logging
LOG_LEVEL=info

# CORS Settings
CORS_ORIGIN=*

# File paths (relative to server working directory)
RELAY_CONFIG_PATH=../.relay
WEB_BUILD_PATH=./web/build

# GitHub CLI Integration (optional)
# These will be used if gh CLI is configured
GITHUB_TOKEN=your_github_token_here

# Audio Configuration
AUDIO_SAMPLE_RATE=16000
AUDIO_CHANNELS=1

# Session Configuration
SESSION_TIMEOUT=3600
MAX_CONCURRENT_SESSIONS=10

# WebSocket Configuration
WS_READ_BUFFER_SIZE=1024
WS_WRITE_BUFFER_SIZE=1024
